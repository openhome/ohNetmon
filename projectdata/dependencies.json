[
    {   "name": "ohNet",
        "type": "openhome",
        "platform-specific": true,
        "version": "1.4.1762",
        "archive-suffix": "-${debugmode}",
        "main-dir": "${dest}${name}-${platform}-${debugmode}",
        "configure-args": [
            "--ohnet-lib-dir", "${main-dir}/lib",
            "--ohnet-include-dir", "${main-dir}/include/ohnet"
        ],
        "_comment": [
            "See ohos for more examples, and ohdevtools/dependencies.py for details",
            "of the predefined values and expansion rules."
        ]
    },
    {   "name": "ohWafHelpers",
        "type": "openhome",
        "platform-specific": false,
        "version": "0.0.85",
        "archive-filename": "${name}-${version}.tar.gz"
    },
    {   "name":             "testharness",
        "version":          "0.1.36",
        "type":             "openhome",
        "archive-filename": "${name}-${version}.tar.gz",
        "dest":             "dependencies/AnyPlatform/"
    },
    {   "name": "libplatform",
        "type": "internal",
        "version": "0.0.150",
        "archive-suffix": "-Release",
        "platform-ignore": {
            "Core-armv5": false,
            "Core-armv6": false,
            "Core-ppc32": false,
            "*": true },
        "ignore": "${platform-ignore[$platform]}"
    },
    {   "name":             "libosa",
        "type":             "internal",
        "version":          "0.0.195",
        "archive-suffix":   "-Release",
        "platform-ignore": {
            "Core-armv5": false,
            "Core-armv6": false,
            "Core-ppc32": false,
            "*": true },
        "ignore":           "${platform-ignore[$platform]}"
    },
    {   "name":             "transmute",
        "version":          "0.0.26",
        "type":             "internal",
        "archive-filename": "${name}-${version}.tar.gz",
        "platform-ignore": {
            "Core-armv5": false,
            "Core-armv6": false,
            "Core-ppc32": false,
            "*": true },
        "ignore":           "${platform-ignore[$platform]}",
        "dest":             "dependencies/AnyPlatform/"
    },
    {   "name":             "volkano-tools",
        "version":          "0.0.4",
        "type":             "internal",
        "archive-filename": "${name}-${version}.tar.gz",
        "platform-ignore": {
            "Core-armv5": false,
            "Core-armv6": false,
            "Core-ppc32": false,
            "*": true },
        "ignore":           "${platform-ignore[$platform]}",
        "dest":             "dependencies/AnyPlatform/${name}/"
    } 
]
